<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheet/mainStyle.css">
  <title>Profile Page</title>
</head>
<body>
  <%- include('../../partials/_navbar.ejs') %>
    <h1>Finish your profile!</h1>
    <form action="/profiles/new" method="POST">
        <label for="firstName">First Name</label>
        <input type="text" name="firstName" id="firstName" />
        <label for="lastName">Last Name</label>
        <input type="text" name="lastName" id="lastName"/>
        <label for="email">Email</label>
        <input type="email" name="email" id="email" />
        <div id="games">
          <h3>Select some Games that you play</h3>
            <select name="games" id="gameSelect" multiple>
              <% games.forEach((game) => { %> 
                  <option name="games" value="<%= game.id %>"><%= game.title %></option>
              <% }) %>
        </select>
        </div>
        <button type="submit">Finish</button>
    </form>
</body>
</html>
